<div class="row">
  <% @users.each do |user| %>
    <div class="col-sm-6 col-md-4 user_profile">
      <div class="thumbnail">
        <img src="<%=user.avatar_url%>" alt="Avatar" style="width:100px;" class="img-circle">
        <div class="caption ">
          <h3><%=user.name%><small>参考になった：<%= user.get_upvotes.size %></small></h3>
          <h3>自己紹介</h3>
          <div><%= user.bio %></div>
          <h3>専攻</h3>
          <div><%= user.major %></div>
          <h3>論文名</h3>
          <div><%= user.thesisName %></div>
          <p style="text-align:center; padding-top:15px;"><a href="<%=user_path(user)%>" class="btn btn-block btn-primary" role="button">詳細を見る</a></p>
        </div>
      </div>
    </div>
  <% end %>
