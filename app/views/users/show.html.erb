<div class="row">
        <div class="col-sm-12 col-md-4">
            <img src="<%=@user.avatar_url%>" alt="Avatar" style="width: 200px;">
            <h2><%=@user.name%></h2>
            <h2>プロフィール<small>Profile</small></h2>
            <p><%=@user.bio%></p>
            <h2>評価</h2>
            <h2>専攻<small>Major</small></h2>
            <div><%= @user.major %></div>
        </div>
        
        <div class="col-sm-12 col-md-8">
            <h2>論文のタイトル<small>Title of Thesis</small></h2>
            <div><%= @user.thesisName %></div>
            <h2>抄訳<small>Abstract</small></h2>
            <div><%= @user.abstract %></div>
        </div>
        
        <div class ="col-sm-12 col-md-12">
            <iframe src=<%= @user.attachment %> style="border: 0" width="100%" height="600" frameborder="0" scrolling="no"></iframe>
        </div>
        
        <% if current_user.id == @user.id %>
            <p><a href="<%=edit_user_path(@user.id)%>" class="btn btn-primary" role="button">Edit Profile</a></p>
        <% end %>
    </div>
        <%= link_to "ユーザー一覧に戻る",users_path %>
    </div>
</div>